<% if p("bpm.enabled") %>
check process cube_route_emitter
  with pidfile /var/vcap/sys/run/bpm/cube_route_emitter/cube_route_emitter.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start cube_route_emitter"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop cube_route_emitter"
  group vcap
<% else %>
check process cube_route_emitter
  with pidfile /var/vcap/sys/run/cube_route_emitter/cube_route_emitter.pid
  start program "/var/vcap/jobs/cube_route_emitter/bin/emitter_ctl start"
  stop program "/var/vcap/jobs/cube_route_emitter/bin/emitter_ctl stop"
  group vcap
<% end %>
